@{
    ViewData["Title"] = "Board";
    ViewBag.Current = "Board";
}

<div class="row">
    <button type="button" class="btn unrecognized d-block mr-0 ml-auto" data-toggle="modal" data-target="#unrecognizedModal">
        Unrecognized
    </button>
</div>

<div class="row">
    <div class="col-4">
        <div class="row">
            <h5 class="col-6">TO DO</h5>
            <h5 class="task-counter col-6">4</h5>
        </div>
        <div class="task">
            Task 1
        </div>
        <div class="task">
            Task 2
        </div>
        <div class="task">
            Task 3
        </div>
        <div class="task">
            Task 4
        </div>
    </div>

    <div class="col-4">
        <div class="row">
            <h5 class="col-6">TO DO</h5>
            <h5 class="task-counter col-6">0</h5>
        </div>
    </div>

    <div class="col-4">
        <div class="row">
            <h5 class="col-6">TO DO</h5>
            <h5 class="task-counter col-6">1</h5>
        </div>
        <div class="task">
            Task 5
        </div>
    </div>
</div>

<div class="modal fade" id="unrecognizedModal" tabindex="-1" role="dialog" aria-labelledby="unrecognizedModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="unrecognizedModalLabel">Unrecognized tasks</h5>
            </div>
            <div class="modal-body">
                <div class="task">
                    Task 1
                </div>
                <div class="task">
                    Task 2
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
