@model QoolloTaskViewer.Models.RegisterModel
@{
  ViewData["Title"] = "Register";
  ViewBag.Current = "Register";
}

<div class="col-4 mt-3 ml-3">
  <div class="row">
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
      <div class="validation" asp-validation-summary="ModelOnly"></div>
      <div>
        <div>
          <label asp-for="Username">Username</label><br />
          <input class="form-control" type="text" asp-for="Username" />
          <span asp-validation-for="Username" />
        </div>
        <div>
          <label asp-for="Password">Password</label><br />
          <input class="form-control" asp-for="Password" />
          <span asp-validation-for="Password" />
        </div>
        <div>
          <label asp-for="ConfirmPassword">Password confirmation</label><br />
          <input class="form-control" asp-for="ConfirmPassword" />
          <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
          <button class="btn-second mt-3" type="submit">Register</button>
        </div>
      </div>
    </form>
  </div>

  <div class="row mt-3">
    <form method="post">
      <button class="btn" asp-action="Login" asp-controller="Account">Login</button>
    </form>
  </div>
</div>