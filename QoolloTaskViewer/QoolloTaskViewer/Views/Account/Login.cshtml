@model QoolloTaskViewer.Models.LoginModel

<h2>Sign In</h2>

<a asp-action="Register" asp-controller="Account">Sign Up</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
  <div class="validation" asp-validation-summary="ModelOnly"></div>
  <div>
    <div class="form-group">
      <label asp-for="Username">Input username</label>
      <input type="text" asp-for="Username" />
      <span asp-validation-for="Username" />
    </div>
    <div class="form-group">
      <label asp-for="Password">Input password</label>
      <input asp-for="Password" />
      <span asp-validation-for="Password" />
    </div>
    <div class="form-group">
      <label asp-for="RememberMe">Remember me</label>
      <input asp-for="RememberMe" />
      <span asp-validation-for="Password" />
    </div>
    <div class="form-group">
      <input type="submit" value="Login" class="btn" />
    </div>
  </div>
</form>
