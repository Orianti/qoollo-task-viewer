@model QoolloTaskViewer.Models.LoginModel
@{
  ViewData["Title"] = "Login";
  ViewBag.Current = "Login";
}

<div class="col-4 mt-3 ml-3">
  <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
      <div>
        <label asp-for="Username">Username</label>
        <input class="form-control" type="text" asp-for="Username" />
        <span asp-validation-for="Username" />
      </div>
      <div>
        <label asp-for="Password">Password</label>
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" />
      </div>
      <div>
        <label asp-for="RememberMe">Remember me</label>
        <input class="ml-2" asp-for="RememberMe" />
        <span asp-validation-for="Password" />
      </div>
      <div class="text-center">
        <button class="btn-second mt-3" type="submit">Login</button>
      </div>
    </div>
  </form>

  <p class="text-center mt-2 mb-2">or</p>
  
  <form class="text-center" method="post">
    <button class="btn" asp-action="Register" asp-controller="Account">Register</button>
  </form>
</div>