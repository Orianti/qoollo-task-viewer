<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>QTV &centerdot; @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
</head>
<body class="min-100">
    <!-- Hmm, not too elegant -->
    <div class="bg-mineral-green-light nav-bg"></div>
    <div class="bg-mineral-green logo-bg"></div>

    <div class="container min-100 d-flex flex-column">
        <header class="row header">
            <div class="col-3 bg-logo">
                <img src="~/img/logo.svg" alt="Qoollo Logo" class="logo" />
            </div>
            <div class="col-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-3">
                <!-- Userpic and username -->
            </div>
        </header>

        <div class="row main flex-fill">
            <nav class="nav flex-column col-3">
                <a asp-action="index" asp-controller="Board" class="nav-link @(ViewBag.Current == "Board" ? "active" : "")">
                    <img src="~/img/board_icon.svg" class="navicon" />
                    BOARD
                </a>
                <a asp-action="index" asp-controller="Settings" class="nav-link @(ViewBag.Current == "Settings" ? "active" : "")">
                    <img src="~/img/settings_icon.svg" class="navicon" />
                    SETTINGS
                </a>
                <a class="nav-link" href="#">
                    <img src="~/img/sign_out_icon.svg" class="navicon" />
                    SIGN OUT
                </a>
            </nav>
            <div class="col-9">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
